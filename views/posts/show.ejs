<h1><%= post.title %> <small>by <%= post.userId %></small></h1>

<p>
    <strong><%= moment(post.createdAt).calendar() %></strong>
</p>

<p>
    <%= post.content %>
</p>

<p>
    <strong>Tags:</strong>
</p>
<ul>
    <% post.tags.forEach(function(tag){ %>
        <li>#
            <%= tag.name %>
        </li>
        <% }); %>
</ul>

<hr />

<h2>Comments</h2>

<% post.comments.forEach(function(comment, index) { %>
    <div class="well">
        <p>
            <%= comment.content %>
        </p>
        <p>
            <%= comment.userId %>
        </p>
    </div>
    <% }); %>

